<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/reset.css" />
    <link rel="stylesheet" href="css/style.css" />
    <title>results</title>
  </head>
  <body>
    <%- include('./layouts/header') %>
    <h1 class="h1__page">Job Results</h1>
    <div class="homepage__main">
      <% data.forEach(element => { %>
      <div class="homepage__job">
        <h1>Title : <%= element.title %></h1>
        <h2>Company: <%= element.company %></h2>
        <h2>Location: <%= element.location %></h2>
        <h2 class="url">Url: <%= element.url %></h2>
        <form action="/mylist" method="post">
          <input type="hidden" name="title" value="<%= element.title %>" />
          <input type="hidden" name="company" value="<%= element.company %>" />
          <input
            type="hidden"
            name="location"
            value="<%= element.location %>"
          />
          <input type="hidden" name="url" value="<%= element.url %>" />
          <input
            type="hidden"
            name="description"
            value="<%= element.description %>"
          />
          <input type="submit" value="Add To My List" />
        </form>
      </div>
      <% }) %>
    </div>
  </body>
</html>
